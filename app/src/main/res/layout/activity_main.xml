<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/valor_a_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:hint="Introduce el valor de a"
        android:ems="10"/>

    <EditText
        android:id="@+id/valor_b_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el valor de b"
        android:inputType="numberDecimal|numberSigned"
        android:layout_below="@id/valor_a_et"
        android:ems="10"/>

    <EditText
        android:id="@+id/valor_c_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor_b_et"
        android:hint="Introduce el valor de c"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"/>


    <Button
        android:id="@+id/CalcularBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below="@id/valor_c_et"/>

    <Button
        android:id="@+id/BorrarBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:layout_below="@id/CalcularBTN"/>

    <TextView
        android:id="@+id/resultadoTv"
        android:text="Resultado"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_below="@id/BorrarBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>